@model ToDoList.Models.SubTask

@{
    ViewData["Title"] = "Delete SubTask";
}

<h1>Delete SubTask</h1>
<hr />

<h3>Are you sure you want to delete this SubTask?</h3>

<div>
    <h4>SubTask Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsDone)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsDone)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ToDoItem)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ToDoItem.Id)
        </dd>
    </dl>

    <!-- Confirmation Form -->
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />

        <!-- Delete Button and Back Link -->
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
        </div>
    </form>
</div>
